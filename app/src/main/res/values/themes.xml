<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DS_Movies" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_op</item>
        <item name="colorPrimaryVariant">@color/black_op</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:fontFamily">@font/comic_sans</item>
        <item name="android:background">@drawable/shape_edit_text</item>
    </style>

    <style name="Theme.MovieTextStyle" parent="">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/silver</item>
        <item name="fontFamily"> @font/comic_sans</item>
        <item name="android:textColorHint"> @color/silver</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HomeTitleTextStyle" parent="">
        <item name="android:textColor">@color/semi_gray</item>
        <item name="fontFamily"> @font/comic_sans_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.LoginTextStyle" parent="">
        <!-- Primary brand color. -->
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily"> @font/comic_sans</item>
        <item name="android:textSize">12sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/Red</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextAppearance">@style/AppSelectedTabTextAppearance</item>  //selected color
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/comic_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppSelectedTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/comic_sans</item>
        <item name="android:textColor">@color/semi_gray</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>