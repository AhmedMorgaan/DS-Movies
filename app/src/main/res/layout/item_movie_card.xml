<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.ds_movies.data.models.MovieItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="350dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:scaleType="fitXY"
                tools:src="@drawable/black_widow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/image_gradient" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/movie_title"
            style="@style/Theme.MovieTitleCardTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:text="@{model.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ic_rate"
            tools:text="@string/black_widow" />

        <ImageView
            android:id="@+id/ic_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_rate"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/Theme.MovieTitleCardTextStyle"
            android:id="@+id/movie_vote_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@{model.voteAverage.toString()}"
            app:layout_constraintStart_toEndOf="@+id/ic_rate"
            app:layout_constraintTop_toTopOf="@+id/ic_rate"
            app:layout_constraintBottom_toBottomOf="@+id/ic_rate"
            tools:text="@string/_7_5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>